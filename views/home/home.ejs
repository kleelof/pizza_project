 <%- include('../header'); -%>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= homeData?.title || 'Our Pizza Restaurant Online Ordering System' %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-800">
  <div class="flex flex-col items-center justify-center min-h-screen text-center px-4">
    <h1 class="text-4xl font-bold mb-4">
  <%= homeData?.title || 'Welcome to Our Pizza Restaurant Online Ordering System!' %>
    </h1>

    <img src="/images/pizza.webp" alt="Pizza" class="w-64 h-64 object-cover rounded-full mb-6"
/>
    <h3 class="text-2xl mb-2">
      <%= homeData?.subtitle || 'The best pizza in town' %>
    </h3>
    <p class="text-lg mb-6 max-w-xl">
      <%= homeData?.description || 'Order now and enjoy hot, fresh pizza delivered to your door.' %>
    </p>

    <!-- Order Now Button -->
    <a href="/order/create" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg mb-8">
      Order Now
    </a>

    <% if (homeData?.featuredItems?.length) { %>
      <h4 class="text-xl font-semibold mb-2">Featured Items:</h4>
      <ul class="list-disc list-inside">
        <% homeData.featuredItems.forEach(item => { %>
          <li><%= item %></li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</body>
</html>
<%- include('../footer'); -%>