<%- include('../header'); -%>
<div class="row">
    <div class="col-12 col-lg-6">
      <h1>Orders</h1>
        <table class="table admin-section">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Pizza</th>
                    <th>Drink</th>
                    <th>Total</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.customer_name %></td>
                        <td><%= order.customer_address %></td>
                        <td><%= order.pizzaName %></td>
                        <td><%= order.drinkName %></td>
                        <td><%= (order.total !== undefined && order.total !== null) ? order.total.toFixed(2) : '0.00' %></td>
                        <td>
                            <a href="/admin/order/update/<%= order._id %>">Edit</a> |
                            <a href="/admin/order/delete/<%= order._id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="d-flex justify-content-end">
          <a href="/order/create" class="btn btn-primary">Add Order</a>
        </div>
    </div>


    <div class="col-12 col-lg-6">
      <h1>Inventory</h1>
        <table class="table admin-section">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% inventory.forEach(inv => { %>
                    <tr>
                        <td><a href="/admin/inventory/<%= inv.id %>"><%= inv.name %></a></td>
                        <td><%= inv.type %></td>
                        <td><%= inv.price %></td>
                        <td><%= inv.size %></td>
                        <td>
                            <a href="/admin/inventory/update/<%= inv.id %>">Edit</a> |
                            <a href="/admin/inventory/delete/<%= inv.id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %>
                <!-- <% inventory.forEach(inventory => { %>
                    <tr>
                       <td><a href="/inventory/<%= inventory.id %>"><%= inventory.name %></a></td>
                       <td><%= inventory.type %></td>
                       <td>$<%= inventory.price %></td>
                       <td><%= inventory.size %></td>
                       <td><%= inventory.notes %></td>
                     <td>
                            <a href="/inventory/update/<%= inventory.id %>">Edit</a> |
                            <a href="/inventory/delete/<%= inventory.id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %> -->
            </tbody>
        </table>
        <div class="d-flex justify-content-end">
          <a href="/admin/inventory/create" class="btn btn-primary">Add inventory Item</a>
        </div>
    </div>
</div>

<%- include('../footer'); -%>
